{application, hecate_app_llmd, [
    {description, "Hecate LLM - AI Model Gateway Daemon"},
    {vsn, "0.1.0"},
    {registered, [hecate_app_llmd_sup]},
    {mod, {hecate_app_llmd_app, []}},
    {applications, [
        kernel, stdlib, crypto, ssl, inets,
        cowboy, hackney, reckon_db, evoq, reckon_evoq
    ]},
    {env, [
        {data_dir, "~/.hecate/hecate-app-llmd"},
        {api_socket_name, "api.sock"},
        {enabled, true},
        {backend, ollama},
        {ollama_url, "http://localhost:11434"},
        {poll_interval_ms, 300000},
        {status_interval_ms, 30000}
    ]},
    {modules, []},
    {licenses, ["Apache-2.0"]},
    {links, [{"GitHub", "https://github.com/hecate-social/hecate-app-llm"}]}
]}.
